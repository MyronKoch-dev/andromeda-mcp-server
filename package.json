{
  "name": "@myronkoch/andromeda-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Andromeda blockchain analytics and execution",
  "main": "src/index.ts",
  "bin": {
    "andromeda-mcp-server": "bin/andromeda-mcp-server.js"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myronkoch/andromeda-mcp-server.git"
  },
  "author": "Andromeda Protocol",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:bin",
    "build:bin": "echo 'Using manually created bin file'",
    "build:ts": "tsc",
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "start:mainnet": "ANDROMEDA_NETWORK=mainnet tsx src/index.ts",
    "start:testnet": "ANDROMEDA_NETWORK=testnet tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "echo 'Tests run on production infrastructure' && exit 0",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "andromeda",
    "cosmos",
    "blockchain",
    "analytics",
    "ado",
    "execution",
    "npx",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/index.ts",
    "bin/**/*",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@andromedaprotocol/andromeda.js": "^2.0.0",
    "@cosmjs/amino": "^0.32.0",
    "@cosmjs/cosmwasm-stargate": "^0.32.0",
    "@cosmjs/crypto": "^0.32.0",
    "@cosmjs/encoding": "^0.32.0",
    "@cosmjs/math": "^0.32.0",
    "@cosmjs/proto-signing": "^0.32.0",
    "@cosmjs/stargate": "^0.32.0",
    "@cosmjs/tendermint-rpc": "^0.32.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "tsx": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}